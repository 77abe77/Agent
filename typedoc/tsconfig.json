{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "noEmitOnError": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
